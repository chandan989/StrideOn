<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/signature_grey">

    <ImageView
        android:id="@+id/map_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/edit_text_border"
        android:clipToOutline="true"
        android:src="@drawable/strideon_logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 21"
            android:textSize="15dp"
            android:fontFamily="@font/lufga_regular"
            android:textColor="#9d9d9d"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,04 mi"
                android:textSize="15dp"
                android:fontFamily="@font/lufga_bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Conquered"
                android:textSize="15dp"
                android:fontFamily="@font/pixelify_sans"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400 very"
            android:textSize="13dp"
            android:fontFamily="@font/lufga_regular"
            android:textColor="#9d9d9d"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/right"/>

</LinearLayout>