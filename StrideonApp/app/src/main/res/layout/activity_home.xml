<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/back_black">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/strideon_favicon"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/bigbutton_border"
            android:backgroundTint="@color/white"
            android:visibility="invisible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StrideOn"
            android:fontFamily="@font/pixelify_sans"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/favicon_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/strideon_favicon"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/bigbutton_border"
            android:backgroundTint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/title"
        android:layout_above="@id/dock">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Balance"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_regular"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/bigbutton_border"
                android:backgroundTint="@color/signature_grey"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:layout_gravity="center"
                android:src="@drawable/wepin_logo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.001348"
                android:textColor="@color/white"
                android:fontFamily="@font/pixelify_sans"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bigbutton_border"
                android:backgroundTint="@color/signature_grey"
                android:paddingTop="2dp"
                android:paddingLeft="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/verychat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VERY"
                    android:fontFamily="@font/lufga_regular"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$19,924.28"
                android:textColor="#9d9d9d"
                android:fontFamily="@font/pixelify_sans"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bigbutton_border"
                android:backgroundTint="@color/signature_grey"
                android:paddingTop="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/change_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+$260 (+1.62%)"
                    android:fontFamily="@font/lufga_regular"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/change_sign"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:padding="3dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/growth_icon"
                    android:background="@drawable/bigbutton_border"
                    android:backgroundTint="@color/signature_green" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Price for today"
            android:fontFamily="@font/lufga_regular"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/active_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_back"
                android:padding="6dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/signature_grey">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fruit_color_4"
                    android:padding="5dp"
                    android:background="@drawable/bigbutton_border"
                    android:backgroundTint="@color/back_black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/run_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Run"
                        android:textSize="15dp"
                        android:fontFamily="@font/lufga_semibold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/run_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01:09:44"
                        android:textSize="10dp"
                        android:fontFamily="@font/lufga_regular"
                        android:textColor="#9d9d9d"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distance_conquered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,32 m"
                        android:textSize="15dp"
                        android:fontFamily="@font/lufga_semibold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400 Kcal"
                        android:textSize="10dp"
                        android:fontFamily="@font/lufga_regular"
                        android:textColor="#9d9d9d"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true">
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bigbutton_border"
                    android:layout_centerInParent="true"
                    android:backgroundTint="#d9d9d9"/>

                <View
                    android:id="@+id/run_light"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bigbutton_border"
                    android:backgroundTint="@color/signature_green"/>
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Story"
            android:fontFamily="@font/lufga_bold"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <ScrollView
            android:id="@+id/storyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bigbutton_border"
            android:layout_marginTop="20dp"
            android:scrollbars="none"
            android:backgroundTint="@color/signature_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/map_view"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/edit_text_border"
                        android:clipToOutline="true"
                        android:src="@drawable/map"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <TextView
