<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Google Maps Fragment - Full Screen -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Header with Back Button -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_back"
            android:src="@drawable/back_icon"
            android:padding="12dp"
            android:elevation="8dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StrideOn Tracking"
            android:textSize="22sp"
            android:textColor="@color/signature_grey"
            android:fontFamily="@font/lufga_bold"
            android:background="@drawable/rounded_back"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:elevation="8dp" />

    </LinearLayout>

    <!-- Game Stats Overlay - Enhanced Design -->
    <LinearLayout
        android:id="@+id/stats_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_back"
        android:padding="20dp"
        android:elevation="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/signature_green"
            android:padding="12dp"
            android:layout_margin="4dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/distance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance (km)"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_medium"
                android:alpha="0.9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/signature_grey"
            android:padding="12dp"
            android:layout_margin="4dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_medium"
                android:alpha="0.9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/txt_d"
            android:padding="12dp"
            android:layout_margin="4dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed (km/h)"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_medium"
                android:alpha="0.9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/aidios_red"
            android:padding="12dp"
            android:layout_margin="4dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/score_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lufga_medium"
                android:alpha="0.9" />
        </LinearLayout>

    </LinearLayout>

    <!-- Enhanced Control Buttons - Bottom -->
    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/rounded_back"
        android:padding="16dp"
        android:elevation="12dp">

        <Button
            android:id="@+id/start_stop_button"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginRight="20dp"
            android:text="START"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/bigbutton_border"
            android:fontFamily="@font/lufga_bold"
            android:elevation="16dp"
            android:backgroundTint="@color/signature_green" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="16dp"
            android:text="PAUSE"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_back"
            android:fontFamily="@font/lufga_medium"
            android:elevation="8dp"
            android:backgroundTint="@color/signature_grey"
            android:visibility="gone" />

        <Button
            android:id="@+id/center_location_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="16dp"
            android:text="ðŸ“"
            android:textSize="28sp"
            android:background="@drawable/rounded_back"
            android:elevation="8dp"
            android:backgroundTint="@color/txt_d" />

        <Button
            android:id="@+id/bank_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="BANK"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_back"
            android:fontFamily="@font/lufga_medium"
            android:elevation="8dp"
            android:backgroundTint="@color/aidios_red" />

    </LinearLayout>

</RelativeLayout>