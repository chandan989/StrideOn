<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A"
    android:padding="16dp"
    tools:context=".LeaderboardActivity">

    <TextView
        android:id="@+id/leaderboard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Leaderboard"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/lufga_bold"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rank_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Loading..."
                android:textSize="20sp"
                android:textColor="#FFD700"
                android:fontFamily="@font/lufga_bold"
                android:padding="12dp"
                android:background="@drawable/rounded_back"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rank_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Loading..."
                android:textSize="18sp"
                android:textColor="#C0C0C0"
                android:fontFamily="@font/lufga_medium"
                android:padding="12dp"
                android:background="@drawable/rounded_back"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rank_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Loading..."
                android:textSize="18sp"
                android:textColor="#CD7F32"
                android:fontFamily="@font/lufga_medium"
                android:padding="12dp"
                android:background="@drawable/rounded_back"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rank_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Loading..."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/lufga_regular"
                android:padding="12dp"
                android:background="@drawable/rounded_back"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rank_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Loading..."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/lufga_regular"
                android:padding="12dp"
                android:background="@drawable/rounded_back"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rank_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Loading..."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/lufga_regular"
                android:padding="12dp"
                android:background="@drawable/rounded_back"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rank_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Loading..."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/lufga_regular"
                android:padding="12dp"
                android:background="@drawable/rounded_back"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rank_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Loading..."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/lufga_regular"
                android:padding="12dp"
                android:background="@drawable/rounded_back"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/check_demo_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Demo Score"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_back"
        android:padding="12dp"
        android:layout_marginTop="12dp" />

</LinearLayout>