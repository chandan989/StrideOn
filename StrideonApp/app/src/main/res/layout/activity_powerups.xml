<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Powerups"
    android:background="@color/back_black">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/BackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"
            android:padding="12dp"
            android:background="@drawable/bigbutton_border"
            android:backgroundTint="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StrideOn"
            android:fontFamily="@font/pixelify_sans"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/info_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/info_icon"
            android:padding="5dp"
            android:background="@drawable/bigbutton_border"
            android:backgroundTint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/safe_nut_icon" />

        <TextView
            android:id="@+id/voice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safe Nut"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lufga_semibold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protect your active trail for a short window so you can safely return and bank a huge claim."
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lufga_regular"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/nstxt"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:paddingBottom="1dp"
            android:orientation="horizontal">

            <View
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:background="@drawable/edit_text_border"
                android:backgroundTint="@color/txt_d"/>

            <View
                android:layout_width="25dp"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:background="@drawable/edit_text_border"
                android:backgroundTint="@color/background_grey"/>

        </LinearLayout>

        <TextView
            android:id="@+id/joinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy for 100 very"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="@font/lufga_bold"
            android:background="@drawable/bigbutton_border"
            android:backgroundTint="@color/white"
            android:paddingTop="17sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:paddingBottom="17sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"/>


    </LinearLayout>

</RelativeLayout>