<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right|center_vertical"
        android:layout_margin="30sp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/strideon_logo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weclome to StrideOn\n
Run. Claim. Compete.\n Your city is your arena."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="40sp"
            android:fontFamily="@font/pixelify_sans"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:paddingHorizontal="30sp" />

        <!-- Join Button -->
        <TextView
            android:id="@+id/joinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join!"
            android:textSize="20sp"
            android:fontFamily="@font/lufga_bold"
            android:background="@drawable/bigbutton_border"
            android:backgroundTint="@color/white"
            android:paddingTop="17sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:paddingBottom="17sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"/>
    </LinearLayout>

</RelativeLayout>